// *******************
// NAVIGATION
// *******************
@font-face { font-family: "Nexa-Bold"; src: url('Nexa-Light.otf'); } 
@font-face { font-family: "Nexa-Light"; src: url('Nexa-Light.otf');}
body
	font-family "Nexa-Bold"
	overflow hidden
header
	background url('../images/j-wood.jpg')
	width 100%
	height 1080px
	background-attachment fixed
	.navigation
		position fixed
		left 0
		right 0
		z-index 99
		+media(mobile)
			display block
			background red
			height 300px
			width 100%
			
		nav
			width 600px
			padding-top 15px
			margin 0 auto
			font-size 24px
			text-transform uppercase
			.nav-items
				display flex
				justify-content space-between 
				a
					font-family "Nexa-Bold"
					font-weight bold
					color #f1f1f1
					&:hover
						color #f09
	.jwood-logo
		width 100%
		height 880px
		background url('../images/j-wood-logo.png') no-repeat center center
	.scroll-down
		position relative
		p
			position relative
			margin 0
			padding 0
			text-align center
			font-size 17px
			text-transform uppercase
			color #f1f1f1
		a.double-arrow
			display block
			margin 0 auto
			width 100px
			height 100px
			background url('../images/j-wood-double-arrow.png') no-repeat center center
.divider
	height 2px
	width 90%
	margin 15px auto
	background #f1f1f1
		
.about-me
	padding 75px			
	.jw-image
		width 771px
		height 700px
		flex none
		background url('../images/j-wood-photo.jpg') no-repeat center center
	.jw-about
		display flex
		flex-direction column
		justify-content center
		background #ffffff
		padding-right 14px
		// align-items center
			
		h2
			font-size 60px
			text-align left
			margin 0
			padding 0
			color #202020
		p
			font-size 24px
			font-family $font-family-primary
			color #202020
	.sign
		width 157px
		height 22px
		display block
		background url("../images/jw-sign.png")no-repeat
.portfolio
	width 100%
	height 1080px
	padding-top 130px
	background url('../images/portfolio-bg.jpg') no-repeat left top
	h2
		color white
		font-size 60px
		margin 0
		padding 0
	.pf-items
		margin 0 auto
		margin-top 65px
		max-width 1600px
		height 545px
		display flex
		flex-wrap wrap
		justify-content space-around
		align-content space-between
		img
			max-width: 100%;
	// .pf-item
	// 	display flex
	// 	flex none
	// 	width 279px
	// 	height 250px
	a
		opacity 0
		transform translateX(-20px)
	.is-showing
		opacity 1
		transform translateX(0px)
		transition all 0.3s ease-in-out

		
footer
	height 1080px
	.contact-info
		padding-top 130px
		text-transform uppercase
		display flex
		flex-direction column
		justify-content space-around
		height 1003px
	h4
		font-size 60px
		margin 0
		padding 0
	.social-links
		width 220px
		margin 0 auto
		display flex
		justify-content space-between
		.fb
		.tw
		.in
			font-size 33px
			display block
			width $w = 57px
			height $w
			border 2px solid $black
			border-radius 50%
			overflow hidden
			text-align center
			color $black
		.fb
			line-height 57px
		.tw
			line-height 57px
			display block
			padding-left 2px
		.in
			display block
			padding-left 1px
			line-height 54px
			
	p.design-by
		text-align center
		color #bebebe
		font-size 18px
	.divider
		background #bebebe
	.contact
		margin 0
		padding 0
		font-size 30px
		font-weight bold
		text-align center


// helpers	
.clearfix:after
.clearfix:before
	display table
    content " "
.clearfix:after
	clear both
